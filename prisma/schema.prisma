generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum userRole {
  ADMIN
  STAFF
  CUSTOMER
}

enum itemType {
  OTHER
  COSMETIC
}

enum purchaseType {
  DRUG
  OTHER
  COSMETIC
}

enum TicketStatus {
  USED
  ACTIVE
  EXPIRED
}

model User {
  id         Int        @id @default(autoincrement())
  fullname   String
  username   String     @unique
  email      String?    @unique
  password   String?
  role       userRole   @default(STAFF)
  status     String     @default("ACTIVE")
  telegramId String?    @unique
  created    DateTime   @default(now())
  drugs      Drug[]
  items      Item[]
  batches    Batch[]
  purchases  Purchase[]
}

model Drug {
  id           String     @id @default(cuid())
  name         String
  price        Float
  cost         Float
  quantity     Int
  isAvailable  Boolean    @default(true)
  updated      DateTime   @updatedAt
  registered   DateTime   @default(now())
  registeredBy User       @relation(fields: [registererId], references: [id], onDelete: Cascade)
  registererId Int
  manufacturer String
  purchases    Purchase[]
}

model Item {
  id           String     @id @default(cuid())
  name         String
  type         itemType   @default(OTHER)
  manufacturer String
  price        Float
  cost         Float
  quantity     Int
  isAvailable  Boolean    @default(true)
  registered   DateTime   @default(now())
  updated      DateTime   @updatedAt
  registeredBy User       @relation(fields: [registererId], references: [id], onDelete: Cascade)
  registererId Int
  purchases    Purchase[]
}

model Purchase {
  id       String       @id @default(cuid())
  type     purchaseType @default(DRUG)
  seller   User         @relation(fields: [sellerId], references: [id], onDelete: Cascade)
  sellerId Int
  quantity Int
  item     Item?        @relation(fields: [itemId], references: [id], onDelete: Cascade)
  itemId   String?
  drug     Drug?        @relation(fields: [drugId], references: [id], onDelete: Cascade)
  drugId   String?
  created  DateTime     @default(now())
}

model Batch {
  id           String   @id @default(cuid())
  totalDrugs   Int
  totalItems   Int
  totalCost    Float
  registeredBy User     @relation(fields: [registererId], references: [id], onDelete: Cascade)
  registererId Int
  purchaseDate DateTime @default(now())
}

model Notification {
  id      String   @id @default(cuid())
  title   String
  text    String
  type    String
  created DateTime @default(now())
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}
